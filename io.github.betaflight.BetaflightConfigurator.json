{
    "app-id": "io.github.betaflight.BetaflightConfigurator",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions" : ["org.freedesktop.Sdk.Extension.node16"],
    "command": "run.sh",
    "separate-locales": false,
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Sound access */
        "--socket=pulseaudio",
        /* Network access */
        "--share=network",
        /* Secrets access */
        "--talk-name=org.freedesktop.secrets",
        /* GConf */
        "--talk-name=org.gnome.GConf",
        /* It seems to call bluez */
        "--system-talk-name=org.bluez",
        /* We want full fs access so we can read and write files, for e.g backups and firmware */
        "--filesystem=host",
        /* Need usb device access */
        "--device=all",
        "--metadata=X-DConf=migrate-path=/io/github/betaflight/BetaflightConfigurator/"
    ],
    "modules": [
        {
            "name": "betaflight-configurator",
            "buildsystem": "simple",
            "build-options": {
                "append-path": "/usr/lib/sdk/node16/bin",
                "env": {
                    "CHROMEDRIVER_SKIP_DOWNLOAD": "true",
                    "npm_config_nodedir": "/usr/lib/sdk/node16",
                    "XDG_CACHE_HOME": "/run/build/betaflight-configurator/flatpak-node/cache"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/betaflight/betaflight-configurator.git",
                    "tag": "10.8.0"
                },
                "generated-sources.json",
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [ "/app/main/betaflight-configurator" ]
                },
                {
                    "type": "file",
                    "path": "io.github.betaflight.BetaflightConfigurator.desktop"
                },
                {
                    "type": "file",
                    "path": "io.github.betaflight.BetaflightConfigurator.appdata.xml"
                }
            ],
            "build-commands": [
                "HOME=$PWD yarn config --offline set yarn-offline-mirror $FLATPAK_BUILDER_BUILDDIR/flatpak-node/yarn-mirror",
                "yarn --offline",
                "yarn gulp apps --linux64",
                "mkdir -p /app/main /app/bin",
                "cp -ar apps/betaflight-configurator/*/* /app/main/ ",
                "cp -ar run.sh /app/bin/",
                "mkdir -p /app/share/icons/hicolor/128x128/apps /app/share/applications /app/share/appdata",
                "install images/bf_icon_128.png /app/share/icons/hicolor/128x128/apps/io.github.betaflight.BetaflightConfigurator.png",
                "install io.github.betaflight.BetaflightConfigurator.desktop /app/share/applications",
                "install io.github.betaflight.BetaflightConfigurator.appdata.xml /app/share/appdata"
            ]
        }
    ]
}
